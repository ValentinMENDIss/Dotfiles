* {
        modi: "run,drun,window";
        width: 625;
	    lines: 9;
        columns: 1;
        font: "BigBlueTerm437NerdFont 10";
        case-sensitive: false;
        fullscreen: false;

        /* Custom colours */
        border-radius: 10px;
        background: #313244;
        foreground: #cdd6f4;
}

configuration {
